---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { JobInfo } from "../static-info";

---

<Layout title="Work - Gedeon Sainrival">
    <main>
      <div class="px-10 pt-14">
        <section class="max-w-[880px] mx-auto">
          <h2 class="font-heading font-bold text-lg md:text-3xl uppercase text-[#dfdfdf] tracking-normal">Work Experience</h2>  
          <div class="mt-2 text-xl space-y-5 text-accent tracking-[0.5px] leading-[1.7rem]">
            <p>Listed below are some of the places I've worked at in the past year. </p>
          </div>
          <div class="mt-10">
            {JobInfo.map((work) => (
              <Card thumbnail={work.thumbnail} company={work.company} href={work.href} yearFrom={work.yearFrom} yearTo={work.yearTo} body={work.desc}/>
            ))}
        </div>
        </section>
      </div>
    </main>
</Layout>